Bootstrap: docker
From: python:3.11-slim

%labels
    Author saulrichardson
    Description "EDGAR filing pipeline with pandas/bs4/lxml"

%environment
    export PYTHONUNBUFFERED=1
    export PIP_DISABLE_PIP_VERSION_CHECK=1

%post
    apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        git \
        && rm -rf /var/lib/apt/lists/*

    pip install --upgrade pip
    pip install --no-cache-dir -r /workspace/edgar-filing-pipeline/requirements.txt
    pip install --no-cache-dir /workspace/edgar-filing-pipeline

%runscript
    exec "$@"
